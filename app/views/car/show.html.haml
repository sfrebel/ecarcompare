- model_class = Car
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @car.name
%p
  %strong= model_class.human_attribute_name(:base_price) + ':'
  %br
  = @car.base_price
%p
  %strong= model_class.human_attribute_name(:battery_capacity) + ':'
  %br
  = @car.battery_capacity
%p
  %strong= model_class.human_attribute_name(:range) + ':'
  %br
  = @car.range


= link_to t('.back', :default => t("helpers.links.back")), cars_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_car_path(@car), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), car_path(@car), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

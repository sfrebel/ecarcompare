- model_class = Car
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped.pretty.cars_table
  %thead
    %tr
      %th=t '.actions', :default => t("helpers.actions")
      %th=  :brand
      %th=  :name
      %th=  :base_price
      %th=  :battery_capacity
      %th=  :range
      %th=  :dc_charging
      %th=  :ac_charging
      %th=  :plug_type
      %th=  :consumption
      %th=  :rental_battery
      %th=  :top_speed
      %th=  :continuous_speed
      %th=  :acceleration
      %th=  :seats
      %th=  :frunk_space
      %th=  :trunk_space
      %th=  :frunk_space_big
      %th=  :weight
      %th=  :battery_voltage
      %th=  :camper_mode
      %th=  :interiour_sounds
      %th=  :exteriour_sounds
      %th=  :drive_axle
      %th=  :max_power
      %th=  :max_regen
      %th=  :battery_temp_control
      %th=  :battery_cell_type
      %th=  :battery_chemistry
      %th=  :motor_type
      %th=  :charging_network
      %th=  :towing_capacity
      %th=  :app_access
  %tbody
    - @cars.each do |car|
      %tr
        %td
          = link_to t('.show', :default => t("helpers.links.show")), car_path(car), :class => 'btn btn-default btn-xs'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_car_path(car), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), car_path(car), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
        %td= car.brand
        %td= car.name
        %td= car.base_price
        %td= car.battery_capacity
        %td= car.range
        %td= car.dc_charging
        %td= car.ac_charging
        %td= car.plug_type
        %td= car.consumption
        %td= car.rental_battery
        %td= car.top_speed
        %td= car.continuous_speed
        %td= car.acceleration
        %td= car.seats
        %td= car.frunk_space
        %td= car.trunk_space
        %td= car.frunk_space_big
        %td= car.weight
        %td= car.battery_voltage
        %td= car.camper_mode
        %td= car.interiour_sounds
        %td= car.exteriour_sounds
        %td= car.drive_axle
        %td= car.max_power
        %td= car.max_regen
        %td= car.battery_temp_control
        %td= car.battery_cell_type
        %td= car.battery_chemistry
        %td= car.motor_type
        %td= car.charging_network
        %td= car.towing_capacity
        %td= car.app_access
        
= link_to t('.new', :default => t("helpers.links.new")), new_car_path, :class => 'btn btn-primary'
